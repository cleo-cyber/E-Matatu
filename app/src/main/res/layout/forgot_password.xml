<androidx.constraintlayout.widget.ConstraintLayout xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:tools="http://schemas.android.com/tools"
	android:id="@+id/page_forgot_password_ek2"
	android:layout_marginTop="0dp"
	android:layout_marginStart="0dp"
	android:layout_width="match_parent"
	android:layout_height="match_parent">

	<View
		android:id="@+id/_bg__forgot_password_ek3"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:background="@drawable/_bg__forgot_password_ek3_shape"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintTop_toTopOf="parent" />


	<RelativeLayout
		android:id="@+id/close_ek2"
		android:layout_marginTop="52dp"
		android:layout_marginStart="12dp"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		app:layout_constraintTop_toTopOf="parent"
		app:layout_constraintStart_toStartOf="parent">

		<ImageView
			android:id="@+id/vector_ek8"
			android:src="@drawable/vector_ek8"
			android:contentDescription="vector_ek8"
			android:layout_marginStart="0dp"
			android:layout_marginTop="0dp"
			android:layout_width="22dp"
			android:layout_height="22dp" />

		<ImageView
			android:id="@+id/vector_ek9"
			android:src="@drawable/vector_ek9"
			android:contentDescription="vector_ek9"
			android:layout_marginStart="5.17dp"
			android:layout_marginTop="5.17dp"
			android:layout_width="11.67dp"
			android:layout_height="11.67dp" />

	</RelativeLayout>

	<TextView
		android:id="@+id/forgot_password_ek4"
		android:layout_width="249dp"
		android:layout_height="wrap_content"
		android:layout_marginTop="133dp"
		android:text="@string/forgot_password_ek4_string"
		android:textColor="@color/text_color"
		android:textSize="32sp"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintTop_toTopOf="parent" />

	<TextView
		android:id="@+id/we_ll_send_a_password_reset_link_to_your_email_"
		android:layout_width="wrap_content"
		android:layout_height="31dp"
		android:layout_marginTop="235dp"
		android:text="@string/we_ll_send_a_password_reset_link_to_your_email__string"
		android:textColor="@color/text_ek1_color"
		android:textSize="14sp"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintTop_toTopOf="parent" />


	<RelativeLayout
		android:id="@+id/inputs_ek6"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_marginTop="315dp"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintTop_toTopOf="parent">

		<TextView
			android:id="@+id/label_ek6"
			android:layout_width="40dp"
			android:layout_height="22dp"
			android:layout_marginLeft="20dp"
			android:layout_marginTop="0dp"
			android:text="@string/label_ek6_string"
			android:textColor="@color/e_mat_color"
			android:textSize="12sp" />


		<RelativeLayout
			android:id="@+id/input_ek6"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_marginStart="0dp"
			android:layout_marginTop="19dp">

			<EditText
				android:id="@+id/input_container_ek6"
				android:layout_width="335dp"
				android:layout_height="40dp"
				android:layout_marginStart="0dp"
				android:layout_marginTop="0dp"
				android:inputType="textEmailAddress"
				android:textAlignment="center"
				android:background="@drawable/input_container_ek6_shape" />


		</RelativeLayout>

	</RelativeLayout>


	<RelativeLayout
		android:id="@+id/system_ek2"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:layout_marginStart="-8dp"
		android:layout_marginTop="2dp"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintTop_toTopOf="parent" />


	<RelativeLayout
		android:id="@+id/buttons_ek6"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_marginTop="433dp"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintTop_toTopOf="parent">


		<TextView
			android:id="@+id/button_ek7"
			android:layout_width="349dp"
			android:layout_height="53dp"
			android:layout_gravity="center_horizontal|center"
			android:layout_marginLeft="0dp"
			android:layout_marginTop="0dp"
			android:gravity="center"
			android:text="@string/button_ek7_string"
			android:textColor="@color/text_color"
			android:textSize="18sp"
			android:background="@drawable/button_container_shape"/>

	</RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>




